<p style="color: green"><%= notice %></p>

<div class= "cotainer" style= "margin-top: 80px;">
  <div class= "row">
    <div class= "col-md-4">
    </div>

    <div class= "col-md-8">
      <div class= "card p-4">
        <img src= "<%= @good.image_url %>" class= "card-img-top w-25" style= "height: 100%;">
        <div class= "card-body">
          <p>
            <strong>Goods:</strong>
            <%= @good.goods_id %>
          </p>

          <p>
            <strong>Title:</strong>
            <%= @good.title %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @good.description %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @good.price %>
          </p>

          <p>
            <strong>Date:</strong>
            <%= @good.date %>
          </p>

          <p>
            <strong>Category:</strong>
            <%= @good.category %>
          </p>
          <div>
            <%= link_to "編集", edit_good_path(@good), class: "btn btn-warning" %>
            <%= link_to "一覧に戻る", good_path, class: "btn btn-success" %>
          </div>

          <br/>

          <div>
            <%= button_to "商品を削除", @good, method: :delete, class: "btn btn-danger" %>
          </div>


        </div>
      </div>
    </div>

  </div>
</div>


