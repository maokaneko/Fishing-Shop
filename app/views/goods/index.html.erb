<p style="color: green"><%= notice %></p>

<div class = "container">
  <div class= "h2">お取り扱い商品</div>
  <div class= "mb-4 mt-4">
    <%= link_to "新しい商品を登録", new_good_path, class: "btn btn-danger" %>
  </div>

  <div id= "goods">
    <div class= "row">
      <% @goods.each do |good| %>
        <div class= "col-md-4">
          <%= render good %>
        </div>
      <% end %>
    </div>
  </div>
</div>

